{#LAYOUT#}

<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>

        {% block stylesheets %}
            <link rel="stylesheet" type="text/css" href="{{ asset('/assets/CSS/style.css') }}">
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        {% endblock %}

    </head>
    <body>
    {% block common %}
    <body class="body">
    <header>
        <div class="container">
            {% block user %}
            <div id="branding">
            <span class="user"> <h3>
                    {%  if user!=null %}
                        Welcome {{ user.username }}
                    {% else %}
                        Not Logged in
                    {% endif %}

                </h3> </span>
                <h1><a href="/"><span class="highlight"> SecureBangla Network</span></a></h1>
            </div>
            {% endblock %}
            <nav>
                <ul>

                    <li><a href="/">Home</a></li>
                    <li ><a href="/blog">Articles</a></li>
                    <li><a href="/authors">Authors</a></li>
                    {% if is_granted('ROLE_Author') %}
                        <li><a href="/logout">LogOut</a></li>
                    {% else %}
                        <li><a href="/login">Login</a></li>
                    {% endif %}
                    <li><a href="/sign_up">Post</a></li>
                    <li><a href="/about">About</a></li>




                </ul>

                <form class="example" action="/search" style="margin:auto;max-width:300px" autocomplete="off">
                    <input type="text" placeholder="Search.." name="query" >
                    <button type="submit"><i class="fa fa-search"></i></button>
                </form>

            </nav>
        </div>
    </header>
    </body>

    </body>


    {% endblock %}

        {% block body %}
        {% endblock %}

    {% block footer %}

    <footer>
        <p>SNN Networks, Copyright &copy; 2019</p>
    </footer>
    {% endblock %}

        {% block javascripts %}{% endblock %}
</html>
